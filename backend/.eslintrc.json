{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": [2, { "allow": ["warn", "log", "error"] }],
    "eqeqeq": ["warn", "smart"],
    "no-debugger": "warn",
    "no-unused-expressions": "warn",
    "semi": ["error", "always"],
    "no-empty": "off",
    "eol-last": "error"
  }
}
